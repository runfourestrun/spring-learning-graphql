type Mutation {
    changeCountryPopulation(countryName: String!, population: Int!) : Country
}



type Query {
    girlfriends : [Girlfriend],
    getGirlfriendByName(name: String!): Girlfriend,
    allStates: [State],
    allCountries: [Country],
    getCountryWithMostEvents: Country
    getEventByArtist(artistName: String): Event
}





 enum Genre{
     ROCK,
     RAP,
     COUNTRY,
     OPERA
}




type Event {
    eventName: String
    city: City
    countries:  Country
    artist: Artist
}



type Artist {
    firstName: String,
    lastName: String,
    genre: Genre
}

type Girlfriend {
    name: String
    age: Int
}

type City {
    cityName: String
}

type Country {
    countryName: String
    population: Int
}


"""
purposely leaving an attribute out of State --> State.population()

"""
type State {
    stateName: String
    cities: [City]
    population: Int
}